<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.watchlist" name="Watchlist" provider-name="BigNoid,Unfledged" version="0.0.2">
	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
		<import addon="xbmc.json" version="6.0.0"/>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py" />
	<extension point="xbmc.addon.metadata">
		<description lang="en">Script to provide Watchlist feature for reFocus 1.1.0</description>
		<platform>all</platform>
		<language />
	</extension>
</addon>

	<addon id="skin.refocus" version="1.1.2" name="reFocus" provider-name="Jeroen">
	<requires>
		<import addon="xbmc.gui" version="5.0.1"/>
		<import addon="script.artistslideshow" version="1.6.3"/>
		<import addon="script.artwork.downloader" version="12.0.23"/>
		<import addon="script.globalsearch" version="2.0.8"/>
		<import addon="script.grab.fanart" version="0.13.0"/>
		<import addon="script.tv.show.next.aired" version="6.0.10"/>
		<import addon="script.watchlist" version="0.0.2"/>
		<import addon="service.library.data.provider" version="0.0.3"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary>reFocus by Jeroen</summary>
		<summary lang="nl">reFocus door Jeroen</summary>
		<summary lang="es">reFocus, hecho por Jeroen</summary>
		<summary lang="pl">reFocus autorstwa Jeroena</summary>
		<summary lang="de">reFocus, von Jeroen</summary>
		<description>reFocus is a graphical interface for XBMC Media Center that understands your media is what truly matters. Elegance, simplicity, refinement and a clean look are keywords for this skin.</description>
		<disclaimer>Mouse and touchscreen use not supported</disclaimer>
		<license>Attribution-NonCommercial-ShareAlike 3.0 Unported</license>
		<forum>http://forum.xbmc.org/forumdisplay.php?fid=72</forum>
		<source>https://github.com/jeroenpardon/skin.refocus/</source>
	</extension>
</addon>

<addon id="xbmc.repo.jeroen" name="Jeroen's Add-on Repository" version="1.0.3" provider-name="Jeroen">
    <extension point="xbmc.addon.repository" name="Jeroen's Add-on Repository">
        <info>http://github.com/jeroenpardon/xbmc.repo.jeroen/raw/master/addons.xml</info>
        <checksum>http://github.com/jeroenpardon/xbmc.repo.jeroen/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/jeroenpardon/xbmc.repo.jeroen/raw/master/download/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Jeroen's Add-on Repository</summary>
        <description>Home of the reFocus skin</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
    </extension>
</addon>
</addons>
